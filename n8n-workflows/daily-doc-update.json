    {
      "parameters": {
        "functionCode": "// Only send notification if updates were found (nightly mode = quiet unless needed)\nconst output = $input.item.json.stdout;\nconst updatedMatch = output.match(/Repositories updated: (\\d+)/);\nconst updatedCount = parseInt(updatedMatch ? updatedMatch[1] : '0');\n\nif (updatedCount > 0) {\n  return {\n    json: {\n      message: `ðŸŒ™ Nightly Documentation Update\\n\\nâœ“ ${updatedCount} repositories updated and re-ingested.\\n\\nTimestamp: ${new Date().toLocaleString()}`,\n      shouldNotify: true\n    }\n  };\n}\n\nreturn { json: { shouldNotify: false } };"
      },
      "name": "Format Notification",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        850,
        200
      ],
      "id": "node-4"
    },
    {
      "parameters": {
        "authentication": "headerAuth",
        "url": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
        "options": {},
        "bodyParametersJson": "={\n  \"text\": \"{{$json.message}}\",\n  \"username\": \"AI RAG Documentation Bot\",\n  \"icon_emoji\": \":crescent_moon:\"\n}"
      },
      "name": "Send Slack Notification (Only if Updated)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [
        1050,
        200
      ],
      "id": "node-5"
    }
  ],
