# Ollama Configuration
OLLAMA_HOST=http://ollama:11434
OLLAMA_DEFAULT_MODEL=llama3.1:8b

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=devops_docs
VECTOR_DIMENSION=768

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
CONTEXT_WINDOW=4096

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Document Ingestion
DOCS_DIR=/data/docs
CUSTOM_DOCS_DIR=/data/custom
MAX_WORKERS=4
